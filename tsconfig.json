{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "outDir": "./dist",
    "rootDir": "./src", // Ensure this is set to ./src
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/server.ts" // Ensure this is included
  ],
  "exclude": [
    "node_modules"
  ]
}
