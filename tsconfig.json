{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES5",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
