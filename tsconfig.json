{
  "compilerOptions": {
    "module": "commonjs", // Use ES2022 modules
    "target": "ES5", // Target ES5
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
