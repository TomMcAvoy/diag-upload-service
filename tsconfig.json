{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": false, // Ensure this is set to false to allow emitting compiled files
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/server.ts",
    "src/*.ts/"
  ],
  "exclude": [
    "node_modules"
  ]
}
