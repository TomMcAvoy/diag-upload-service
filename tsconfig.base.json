{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "build",
    "strictPropertyInitialization": false,
    "target": "ES2018",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["cdk.out"]
}
